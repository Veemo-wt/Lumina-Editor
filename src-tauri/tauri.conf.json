{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumina Book Translator",
  "version": "0.1.0",
  "identifier": "com.lumina.booktranslator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lumina Book Translator",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
       "icon": [
       "src-tauri/icons/icon.ico"
       ]
    }
  }
}
